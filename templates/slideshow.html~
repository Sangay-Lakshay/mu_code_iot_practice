<body>
	<h1>SlideShow</h1>
	<img src="/static/1.png" alt="Mafumafu" id="ab">

<script type="text/javascript">
	function change(){
		var img = ["/static/1.png", "/static/2.png", "/static/3.png", "/static/4.png", "/static/5.png", "/static/6.png"];
		var i = Math.floor(Math.random()*6);
		document.getElementById("ab").setAttribute("src", img[i]);
	}

	var ma = document.getElementById("ab");
	ma.addEventListener("click", change);
	
</script>
